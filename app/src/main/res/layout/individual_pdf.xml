<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_marginTop="10dp"
    android:id="@+id/indi_layout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pdf_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_pdf_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/pdf_name_indi"
        android:layout_toRightOf="@id/pdf_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_marginRight="40dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Statistics"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_arrow_down"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/dropdown"
        android:text="0"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/down_arrow_layout"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_below="@id/pdf_name_indi"
        android:layout_toRightOf="@id/pdf_icon"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_round"
            android:layout_marginRight="30dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:text="Add"/>


        <TextView
            android:id="@+id/delete_permanent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_round"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="#D40C09"
            android:text="Delete"/>
    </LinearLayout>

</RelativeLayout>