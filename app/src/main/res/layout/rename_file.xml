<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_rename_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Rename file before adding?"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_rename_text"
        android:layout_width="wrap_content"
        android:layout_below="@id/add_rename_text_title"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="File name"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/rename_file_edittext"
        android:layout_below="@id/add_rename_text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:inputType="textCapSentences"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new name"/>

</RelativeLayout>